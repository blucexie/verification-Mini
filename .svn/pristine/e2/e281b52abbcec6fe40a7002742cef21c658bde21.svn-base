body {
  font-family: "Microsoft YaHei";
  background: #fff;
}
.left {
  float: left;
}
.right {
  float: right;
}
.recharge {
  border-bottom: 1px solid #e7e7e7;
  padding-bottom: 0.8rem;
}
.title {
  margin-top: 0.58rem;
  font-size: 0.62rem;
  text-align: center;
  color: #999999;
}
.balance_t {
  margin-top: 0.98rem;
  color: #333333;
  font-size: 1.6rem;
  text-align: center;
  font-weight: 700;
}
.balance_t > span {
  font-size: 0.76rem;
  font-weight: 600;
}
button {
  width: 5.04rem;
  height: 1.64rem;
  line-height: 1.64rem;
  font-size: 0.64rem;
  text-align: center;
  color: #ffffff;
  outline: none;
  border: none;
  margin-left: 4.98rem;
  margin-top: 0.84rem;
  background-color: #ef8d4a;
  border-radius: 0.3rem;
}
.balance {
  text-align: center;
  overflow: hidden;
  border-bottom: 0.02rem solid #e7e7e7;
}
.balance_l {
  width: 7.48rem;
  border-right: 0.02rem solid #e7e7e7;
}
.balance_r {
  width: 50%;
}
.balance_one {
  font-size: 0.56rem;
  color: #999999;
  margin-top: 0.44rem;
}
.balance_two {
  font-size: 0.76rem;
  color: #333333;
  font-weight: 600;
  margin-top: 0.12rem;
  margin-bottom: 0.44rem;
}
.balance_two > span {
  font-size: 0.48rem;
  font-weight: 500;
}
.record ul li {
  width: 15rem;
  overflow: hidden;
  padding-left: 0.4rem;
  border-bottom: 0.02rem solid #e7e7e7;
}
.record_l p:nth-child(1) {
  font-size: 0.76rem;
  color: #666666;
  margin-top: 0.44rem;
}
.record_l p:nth-child(2) {
  font-size: 0.48rem;
  color: #999999;
  margin-bottom: 0.44rem;
}
.record_r {
  font-size: 0.76rem;
  color: #666666;
  margin-top: 0.72rem;
  margin-right: 0.84rem;
}
.no_more {
  text-align: center;
  margin-top: 1rem;
  color: #999999;
  font-size: 0.48rem;
}
